{
    "actions": [
        {
            "command": "deploy_linaro_kernel",
            "metadata": {
                "image.type": "{image_type}",
                "image.url": "{image_url}",
                "kernel.tree": "{tree}",
                "kernel.version": "{kernel_version}",
                "kernel.endian": "{endian}",
                "kernel.defconfig": "{defconfig}",
                "platform.fastboot": "{fastboot}",
                "test.plan": "{test_plan}"
            },
            "parameters": {
                "dtb": "{dtb_url}",
                "kernel": "{kernel_url}",
                "bootloadertype": "ipxe",
                "target_type": "ubuntu"
            }
        },
        {
            "command": "boot_linaro_image",
	    "parameters": {
		    "options": [
			    "boot_cmds=boot_cmds_nfs_acpi"
		    ]
	    }
        },
	{
	  "command": "lava_test_shell",
	  "parameters": {
		"testdef_repos": [
		  {
			"git-repo": "git://git.linaro.org/qa/test-definitions.git",
			"testdef": "ubuntu/device-tree.yaml"
		  }
		],
		"timeout": 172800
	  }
	},
        {
            "command": "lava_test_shell",
            "parameters": {
                "testdef_repos": [
                    {
                        "git-repo": "http://git.linaro.org/qa/test-definitions.git",
                        "testdef": "common/dt-selftests.yaml"
                    }
                ],
                "timeout": 172800
            }
        },
		{
		  "command": "lava_test_shell",
		  "parameters": {
			"testdef_repos": [
			  {
				"git-repo": "git://git.linaro.org/qa/test-definitions.git",
				"parameters": {
					"SKIPFILE": "skipfile-lsk-juno"
				},
				"testdef": "ubuntu/ltp.yaml"
			  }
			],
			"timeout": 172800
		  }
		},
        {
            "command": "lava_test_shell",
            "parameters": {
                "testdef_repos": [
                    {
                        "git-repo": "https://github.com/joyxu/lava-test-definitions.git",
                        "testdef": "ubuntu/lkp.yaml"
                    }
                ],
                "timeout": 172800
            }
        },
        {
            "command": "lava_test_shell",
            "parameters": {
                "testdef_repos": [
                    {
                        "git-repo": "http://git.linaro.org/qa/test-definitions.git",
                        "testdef": "ubuntu/sysbench.yaml"
                    }
                ],
                "timeout": 172800
            }
        },
        {
            "command": "lava_test_shell",
            "parameters": {
                "testdef_repos": [
                    {
                        "git-repo": "http://git.linaro.org/qa/test-definitions.git",
			"parameters": {
                            "DeviceID": "/dev/sda2"
                        },

                        "testdef": "ubuntu/fio-test.yaml"
                    }
                ],
                "timeout": 172800
            }
        },
        {
            "command": "lava_test_shell",
            "parameters": {
                "testdef_repos": [
                    {
                        "git-repo": "http://git.linaro.org/qa/test-definitions.git",
                        "testdef": "ubuntu/device_read_perf.yaml"
                    }
                ],
                "timeout": 172800
            }
        },
	{
	  "command": "lava_test_shell",
	  "parameters": {
		"testdef_repos": [
		  {
			"git-repo": "git://git.linaro.org/qa/test-definitions.git",
			"testdef": "ubuntu/perf.yaml"
		  }
		],
		"timeout": 172800
	  }
	},
	{
	  "command": "lava_test_shell",
	  "parameters": {
		"testdef_repos": [
		  {
			"git-repo": "git://git.linaro.org/qa/test-definitions.git",
			"testdef": "ubuntu/smoke-tests-basic.yaml"
		  }
		],
		"timeout": 172800
	  }
	},
        {
            "command": "lava_test_shell",
            "parameters": {
                "testdef_repos": [
                    {
                        "git-repo": "http://git.linaro.org/qa/test-definitions.git",
                        "parameters": {
                            "GATEWAY": "192.168.3.1",
                            "TEST_INTERFACE": "eth3"
                        },
                        "testdef": "ubuntu/network-tests-basic.yaml"
                    }
                ],
                "timeout": 172800
            }
        },

	{
		"command": "lava_test_shell",
		"parameters": {
			"testdef_repos": [
			{
				"git-repo": "https://github.com/joyxu/lava-test-definitions",
				"parameters": {
					"LEN": "16K",
					"REMOTE_IP": "192.168.3.100"
				},
				"testdef": "ubuntu/iperf-client.yaml"
			}
			],
				"timeout": 172800
		}
	},
	{
		"command": "lava_test_shell",
		"parameters": {
			"testdef_repos": [
			{
				"git-repo": "https://github.com/joyxu/lava-test-definitions",
				"parameters": {
					"ETH": "eth3",
					"REMOTE_IP": "192.168.3.100"
				},
				"testdef": "ubuntu/netperf-client.yaml"
			}
			],
				"timeout": 172800
		}
	},
        {
            "command": "lava_test_shell",
            "parameters": {
                "testdef_repos": [
                    {
                        "git-repo": "http://git.linaro.org/qa/test-definitions.git",
                        "testdef": "ubuntu/kselftest-net.yaml"
                    }
                ],
                "timeout": 172800
            }
        },

        {
            "command": "lava_test_shell",
            "parameters": {
                "testdef_repos": [
                    {
                        "git-repo": "http://git.linaro.org/qa/test-definitions.git",
                        "testdef": "ubuntu/exec-latency.yaml"
                    }
                ],
                "timeout": 172800
            }
        },
        {
            "command": "lava_test_shell",
            "parameters": {
                "testdef_repos": [
                    {
                        "git-repo": "http://git.linaro.org/qa/test-definitions.git",
                        "testdef": "common/cyclictest-basic.yaml"
                    }
                ],
                "timeout": 172800
            }
        },

        {
            "command": "submit_results",
            "parameters": {
                "server": "LAVA_SERVER",
                "stream": "BUNDLE_STREAM"
            }
        }
    ],
    "device_type": "{device_type}",
    "job_name": "{job_name}",
    "logging_level": "DEBUG",
    "priority": "high",
    "timeout": 172800
}
